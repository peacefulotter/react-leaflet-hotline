{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "declaration": true,
        "inlineSourceMap": false,
        "noImplicitAny": true,
        "target": "es2015",
        "jsx": "react-jsx",
        "lib": ["esnext", "dom"],
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "resolveJsonModule": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/test/*", "lib", "docs", "build", "dist-docs"]
  }